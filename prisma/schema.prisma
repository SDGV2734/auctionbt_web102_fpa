generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             String       @id @default(uuid())
  email          String       @unique
  hashedPassword String
  name           String
  phoneNumber    String
  profileImage   String?
  auctionRoomId  String?
  Product        Product[]
  AuctionRoom    AuctionRoom? @relation(fields: [auctionRoomId], references: [id])
}

model Product {
  id              String       @id @default(uuid())
  name            String
  description     String
  startPrice      Float
  minSellingPrice Float
  minIncrementBid Float
  startDate       DateTime?
  endDate         DateTime?
  extendTime      Float?
  image           String
  sellerId        String
  roomId          String?
  room            AuctionRoom? @relation(fields: [roomId], references: [id])
  seller          User         @relation(fields: [sellerId], references: [id])
}

model AuctionRoom {
  id          String    @id @default(uuid())
  name        String
  description String
  createdAt   DateTime  @default(now())
  products    Product[]
  Users       User[]
}
