// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             String       @id @default(uuid())
  email          String       @unique
  hashedPassword String
  name           String
  phoneNumber    String
  profileImage   String?
  Product        Product[]
  AuctionRoom    AuctionRoom? @relation(fields: [auctionRoomId], references: [id])
  auctionRoomId  String?
}

model Product {
  id              String       @id @default(uuid())
  name            String
  description     String
  startPrice      Float
  minSellingPrice Float
  minIncrementBid Float
  startDate       DateTime?
  endDate         DateTime?
  extendTime      Float?
  image           String
  seller          User         @relation(fields: [sellerId], references: [id])
  sellerId        String
  room            AuctionRoom? @relation(fields: [roomId], references: [id])
  roomId          String
}

model AuctionRoom {
  id       String    @id @default(uuid())
  name     String
  Users    User[]
  products Product[]
  description String
  createdAt DateTime @default(now())
}
